FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive
WORKDIR /opt

# Install system packages
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    libcurl4-openssl-dev \
    ninja-build \
    git \
    curl \
    wget \
    unzip \
    ffmpeg \
    sox \
    python3 \
    python3-pip \
    libpulse-dev \
    portaudio19-dev \
    alsa-utils \
    libasound2-dev \
    libtool \
    espeak-ng \
    libespeak-ng-dev \
    libportaudio2 \
    libportaudiocpp0 \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip
RUN pip3 install --upgrade pip

# Install PyTorch for CPU (stable wheels)
RUN pip3 install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cpu

# Install cleanly, split to isolate errors
RUN pip3 install flask
RUN pip3 install transformers accelerate sentencepiece
RUN pip3 install sounddevice
RUN pip3 install git+https://github.com/coqui-ai/TTS.git
RUN pip3 install git+https://github.com/openai/whisper.git

# Clone and build llama.cpp (CMake build)
RUN git clone https://github.com/ggerganov/llama.cpp.git && \
    cd llama.cpp && \
    mkdir build && cd build && \
    cmake .. && \
    cmake --build . --config Release

# Setup workspace and models
RUN mkdir -p /models /workspace /flask_app
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

WORKDIR /workspace
ENTRYPOINT ["/entrypoint.sh"]

